---
import HeaderLink from './HeaderLink.astro';
import NavBurger from '../components/NavBurger.astro';
import { SITE_TITLE } from '../consts';
---

<nav class="container">
	<ul>
		<li class="logo"><a href="#">{SITE_TITLE}</a></li>
	</ul>
	<input class="menu-btn" type="checkbox" id="menu-btn" />
	<label class="menu-icon" for="menu-btn">
		<span class="nav-icon">
			<svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="16px" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<line x1="3" y1="12" x2="21" y2="12"></line>
				<line x1="3" y1="6" x2="21" y2="6"></line>
				<line x1="3" y1="18" x2="21" y2="18"></line>
			  </svg>			
		</span>
	</label>
	<ul class="menu">
		<HeaderLink href="/">Home</HeaderLink>		
		<HeaderLink href="/blog">Blog</HeaderLink>		
		<HeaderLink href="/about">About</HeaderLink>		
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>

		<!-- <li class="item button"><a href="#">Login</a></li>
		<li class="item button secondary"><a href="#">Sign Up</a></li> -->
	</ul>
</nav>


<header>
	<h2>
		{SITE_TITLE}
	</h2>

	<!-- <NavBurger />
	<nav class="sidebar">
		<ul>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
			<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
		</ul>
	</nav> -->
</header>
<style>
	body>header {
		/* usefule when "position: fixed" is turned-on */
		padding-top: 80px;
	}

	nav.container {
		background-color: var(--background-color);
		position: fixed;
		z-index: 1;
		overflow: hidden;
		align-items: center;
	}

	nav :is(.menu-btn, .menu-icon) {
		display: none;
		cursor: pointer;
		user-select: none;
	}

	
@media (width < 48em) {
	nav.container {
		flex-wrap: wrap;
		& .menu-icon {
			display:block;
		}
		& .menu-btn:checked ~ .menu {
			max-height: 100vh;
		}

		& >ul.menu {
			flex-direction: column;
			align-items:flex-start;
			width: 100%;
			max-height: 0;
			transition: max-height 0.3s ease-out;
			box-shadow: 0px 3px 8px;
			margin: 10px 10px;
			& :global(li) {
				width: 100%;
			}
			& :global(a) {
				display: block;
			}
			& :global(a:hover) {
				background-color: var(--secondary-hover);
			}
		}
	}
}


</style>
